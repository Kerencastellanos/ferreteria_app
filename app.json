{
  "expo": {
    "name": "ferreteria_app",
    "slug": "ferreteria_app",
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "La aplicacion necesita acceso a tus imagenes."
        }
      ]
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/helmet.png",
    "splash": {
      "image": "./assets/helmet.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/helmet.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
